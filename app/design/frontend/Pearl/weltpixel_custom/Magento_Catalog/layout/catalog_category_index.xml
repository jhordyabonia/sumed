<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.top">
            <block  name="custom_offert_block" template="Magento_Catalog::offert-block.phtml" after="-">
                <arguments>
                    <argument xsi:type="string" name="_name">offert-block-cms</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="page.bottom.container">
            <block  name="custom_offert_block_footer" template="Magento_Catalog::offert-block.phtml" before="-">
                <arguments>
                    <argument xsi:type="string" name="_name">offert-block-cms-footer</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
